// }

// ============================================================================
// PHOTO MANAGEMENT
// ============================================================================

model Photo {
  id            String       @id @default(cuid())
  filename      String
  url           String
  thumbnailUrl  String?
  size          Int
  mimeType      String
  boreId        String?
  inspectionId  String?
  dailyReportId String?
  uploadedById  String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  bore          Bore?        @relation(fields: [boreId], references: [id], onDelete: Cascade)
  inspection    Inspection?  @relation(fields: [inspectionId], references: [id], onDelete: Cascade)
  dailyReport   DailyReport? @relation(fields: [dailyReportId], references: [id], onDelete: Cascade)
  uploadedBy    User         @relation(fields: [uploadedById], references: [id])

  @@index([boreId])
  @@index([inspectionId])
  @@index([dailyReportId])
  @@index([uploadedById])
}

// ============================================================================
// COST DATABASE & ESTIMATING
// ============================================================================

model CostCategory {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  sortOrder   Int        @default(0)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  costItems   CostItem[]

  @@index([isActive])
}

model CostItem {
  id              String       @id @default(cuid())
  categoryId      String
  code            String       @unique  // e.g., "HDD-001", "LABOR-001"
  name            String
  description     String?
  unit            String       // "LF", "HR", "EA", "CY", etc.
  unitCost        Float
  laborRate       Float?       // Labor cost per unit
  equipmentRate   Float?       // Equipment cost per unit
  materialCost    Float?       // Material cost per unit
  productionRate  Float?       // Units per hour (for labor calculations)
  markup          Float        @default(0.15) // Default 15% markup
  isActive        Boolean      @default(true)
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  category        CostCategory @relation(fields: [categoryId], references: [id])
  estimateLines   EstimateLine[]

  @@index([categoryId])
  @@index([code])
  @@index([isActive])
}

model Estimate {
  id              String         @id @default(cuid())
  projectId       String?
  name            String
  description     String?
  status          String @default("DRAFT")
  customerName    String?
  customerEmail   String?
  customerPhone   String?
  validUntil      DateTime?
  subtotal        Float          @default(0)
  markupPercent   Float          @default(0.15)
  markupAmount    Float          @default(0)
  taxPercent      Float          @default(0)
  taxAmount       Float          @default(0)
  total           Float          @default(0)
  notes           String?
  terms           String?
  createdById     String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // Relations
  project         Project?       @relation(fields: [projectId], references: [id], onDelete: SetNull)
  createdBy       User           @relation("EstimateCreator", fields: [createdById], references: [id])
  lines           EstimateLine[]

  @@index([projectId])
  @@index([status])
  @@index([createdById])
}

// enum EstimateStatus {
//   DRAFT
//   SENT
//   APPROVED
//   REJECTED
//   EXPIRED
// }

model EstimateLine {
  id              String    @id @default(cuid())
  estimateId      String
  costItemId      String?
  lineNumber      Int
  description     String
  quantity        Float
  unit            String
  unitCost        Float
  laborCost       Float     @default(0)
  equipmentCost   Float     @default(0)
  materialCost    Float     @default(0)
  subtotal        Float
  markup          Float     @default(0)
  total           Float
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  estimate        Estimate  @relation(fields: [estimateId], references: [id], onDelete: Cascade)
  costItem        CostItem? @relation(fields: [costItemId], references: [id], onDelete: SetNull)

  @@index([estimateId])
  @@index([costItemId])
}

// ============================================================================
// GEOTECHNICAL DATA
// ============================================================================

model GeotechReport {
  id              String      @id @default(cuid())
  projectId       String
  title           String
  reportDate      DateTime
  engineer        String?
  description     String?
  pdfUrl          String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  project         Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  soilLayers      SoilLayer[]

  @@index([projectId])
}

model SoilLayer {
  id              String        @id @default(cuid())
  geotechReportId String
  startDepth      Float
  endDepth        Float
  soilType        String        // "Clay", "Sand", "Rock", "Cobble", etc.
  description     String?
  color           String?       // Hex code for visualization
  hardness        Float?        // Scale 1-10 or specific unit
  phpaRequired    Boolean       @default(false)
  rockStrengthPsi Float?        // For rock
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  geotechReport   GeotechReport @relation(fields: [geotechReportId], references: [id], onDelete: Cascade)

  @@index([geotechReportId])
}

// ============================================================================
// HDD ENGINEERING & PLANNING
// ============================================================================

model BorePlan {
  id              String      @id @default(cuid())
  boreId          String      @unique
  designMethod    String?     // "ASTM F1962", "PRCI"
  totalLength     Float
  pipeDiameter    Float
  pipeMaterial    String      // "HDPE", "Steel", "PVC"
  entryAngle      Float?
  exitAngle       Float?
  bendRadius      Float?
  pullbackForce   Float?      // Calculated
  safetyFactor    Float?
  fracOutRisk     String?     // "Low", "Medium", "High"
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  bore            Bore        @relation(fields: [boreId], references: [id], onDelete: Cascade)
  fluidPlan       FluidPlan?
}

model FluidPlan {
  id              String      @id @default(cuid())
  borePlanId      String      @unique
  soilType        String
  pumpRate        Float?      // GPM
  fluidType       String?     // "Bentonite", "Polymer"
  additives       String?     // JSON array of additives
  volumePerFt     Float?      // Calculated
  totalVolume     Float?      // Calculated
  cleaningRate    Float?      // Annular Velocity
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  borePlan        BorePlan    @relation(fields: [borePlanId], references: [id], onDelete: Cascade)
}

// ============================================================================
// INVENTORY & ASSET MANAGEMENT
// ============================================================================

model InventoryItem {
  id              String      @id @default(cuid())
  name            String
  sku             String?     @unique
  category        String      // "Fluid", "Pipe", "Parts", "PPE"
  description     String?
  unit            String      // "Bag", "Pallet", "Foot", "Each"
  quantityOnHand  Float       @default(0)
  reorderPoint    Float?
  location        String?     // Warehouse location
  costPerUnit     Float?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  transactions    InventoryTransaction[]
}

model InventoryTransaction {
  id              String        @id @default(cuid())
  itemId          String
  type            String        // "IN", "OUT", "ADJUST"
  quantity        Float
  projectId       String?
  userId          String
  notes           String?
  createdAt       DateTime      @default(now())

  // Relations
  item            InventoryItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  project         Project?      @relation(fields: [projectId], references: [id])
  user            User          @relation(fields: [userId], references: [id])

  @@index([itemId])
  @@index([projectId])
}

// ============================================================================
// OBSTACLES & UTILITIES
// ============================================================================

model Obstacle {
  id              String      @id @default(cuid())
  projectId       String
  name            String      // "Gas Line", "Fiber Optic", "Foundation"
  type            String      // "UTILITY", "STRUCTURE", "NATURE"
  
  // Coordinates (Simple point or start/end for linear)
  startX          Float
  startY          Float
  startZ          Float       // Depth/Elevation
  endX            Float?
  endY            Float?
  endZ            Float?
  
  diameter        Float?      // If pipe
  safetyBuffer    Float       @default(2.0) // Feet
  
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  project         Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Asset {
  id              String      @id @default(cuid())
  name            String      // e.g., "Vermeer D24x40"
  type            String      // "Drill", "Excavator", "Truck", "Locator"
  model           String?
  serialNumber    String?
  status          String      @default("AVAILABLE") // "AVAILABLE", "IN_USE", "MAINTENANCE", "RETIRED"
  projectId       String?     // Current location/assignment
  purchaseDate    DateTime?
  hours           Float?      // Engine hours
  location        String?     // Current jobsite or yard
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  project         Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([status])
  @@index([type])
}

model StationProgress {
  id              String    @id @default(cuid())
  projectId       String
  date            DateTime
  startStation    Float     // e.g., 100.0
  endStation      Float     // e.g., 250.0
  status          String    // "PILOT", "REAM", "PULLBACK", "COMPLETED"
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([date])
}

model Tooling {
  id              String      @id @default(cuid())
  name            String      // e.g., "5in Rock Reamer"
  type            String      // "Reamer", "Housing", "Bit", "Sub"
  serialNumber    String?
  condition       String      @default("GOOD") // "GOOD", "FAIR", "POOR", "RETIRED"
  hoursUsed       Float       @default(0)
  maxHours        Float?      // Expected life
  location        String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}
